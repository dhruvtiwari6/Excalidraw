
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id          String   @id @default(uuid())
  name        String
  email       String   @unique
  password    String
  photo       String?
  rooms       Room[]
  chats       Chat[]
  shapes      Shape[]
}

model Room{
  id          Int      @id @default(autoincrement())
  slug        String   @unique
  createdAt   DateTime @default(now())
  adminId     String
  admin       User     @relation(fields:[adminId] , references:[id])
  chats       Chat[]
  shapes      Shape[]
}

model Chat{
  id       Int   @id @default(autoincrement())
  message  String
  userId   String
  roomId   Int
  room     Room   @relation(fields: [roomId] , references:[id])
  user     User   @relation(fields: [userId] , references:[id])
}

model Shape{
  id            String  @id @default(uuid())
  roomId        Int
  room          Room    @relation(fields: [roomId] , references:[id])

  userId        String
  user          User    @relation(fields: [userId] , references : [id])

  type          ShapeType
  data          Json

  updatedAt     DateTime  @updatedAt
  createdAt     DateTime  @default(now())
}

enum ShapeType {
  RECT
  CIRCLE
  LINE
  ARROW
  PENCIL
}
