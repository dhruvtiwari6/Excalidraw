{
  "name": "draw-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:generate":"cd packages/db && npx prisma generate && cd ../.. ",
    "start:web": "cd apps/excalidraw_frontend && npm run start",
    "start:backend": "cd apps/http-backend && npm run start",
    "start:ws": "cd apps/ws-backend && npm run start"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.6.3",
    "typescript": "5.9.2"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@11.6.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "dotenv": "^17.2.3"
  }
}
